<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="StormMacro.MacroButton"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480" Width="50" Height="50" MouseUp="UserControl_MouseUp" MouseLeave="UserControl_MouseLeave" MouseEnter="UserControl_MouseEnter" MouseDown="UserControl_MouseDown">

	<Grid x:Name="LayoutRoot">
		<Rectangle Margin="1" Stroke="Black" Fill="Black" Opacity="0"/>
		<Border x:Name="HoverRect" BorderBrush="#FF0020D4" BorderThickness="1">
			<Rectangle Margin="0" Opacity="0.25">
				<Rectangle.Fill>
					<RadialGradientBrush>
						<GradientStop Color="#FF0032CC" Offset="1"/>
						<GradientStop Color="White"/>
					</RadialGradientBrush>
				</Rectangle.Fill>
			</Rectangle>
		</Border>
	</Grid>
</UserControl>